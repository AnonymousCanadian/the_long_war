title: Status
new-page: true
is-special: true
on-arrival: {!
Q.position = "";
if (Q.player_party == 'm') {
    if (Q.m_in_exco) {
        Q.position = 'Soviet Executive Committee';
        if (Q.m_in_prov_gov) {
            Q.position += ', in government';
        }
    } else if (Q.m_in_prov_gov) {
        Q.position = 'in government';
    } else {
        Q.position = 'in opposition';
    }
} else if (Q.player_party == 'b') {
    if (Q.b_in_exco) {
        Q.position = 'Soviet Executive Committee';
        if (Q.b_in_prov_gov) {
            Q.position += ', in government';
        }
    } else if (Q.b_in_prov_gov) {
        Q.position = 'in government';
    } else {
        Q.position = 'in opposition';
    }
} else if (Q.player_party == 'sr') {
    if (Q.sr_in_exco) {
        Q.position = 'Soviet Executive Committee';
        if (Q.sr_in_prov_gov) {
            Q.position += ', in government';
        }
    } else if (Q.sr_in_prov_gov) {
        Q.position = 'in government';
    } else {
        Q.position = 'in opposition';
    }
} else if (Q.player_party == 'k') {
    if (Q.k_in_prov_gov) {
        Q.position += 'in government';
    } else {
        Q.position = 'in oppsition';
    }
}
!}

